<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>dupFinder Info</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="/assets/tailwind.js"></script>  
  <% function formatBytes(bytes) {
    if (bytes === 0 || bytes == null) return '0 B';
    const units = ['B', 'KB', 'MB', 'GB', 'TB'];
    const i = Math.floor(Math.log(bytes) / Math.log(1024));
    const value = bytes / Math.pow(1024, i);
    return `${value.toFixed(2)} ${units[i]}`;
  } %>
</head>
<body class="bg-gray-100 text-gray-900 flex items-center justify-center">

  <section class="w-full max-w-4xl flex flex-col justify-between p-6 bg-white shadow-lg rounded-lg">
    <!-- ðŸŒ€ Header -->
    <header id="reloadHeader" class="text-center mb-4 hover:cursor-pointer" title="Click to refresh">
      <h1 class="text-4xl font-bold">
        ðŸŒ€ <span class="font-normal">dup</span><span class="font-extrabold text-gray-900">Finder</span>
      </h1>
    </header>

    <main class="py-4 px-4">
      <!-- Audit Metadata Table -->
      <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">Audit Metadata</h2>
        <table class="w-full bg-white rounded shadow">
          <thead class="bg-gray-200 text-left">
            <tr>
              <th class="px-4 py-2 w-1/2">Key</th>
              <th class="px-4 py-2 w-1/2">Value</th>
            </tr>
          </thead>
          <tbody>
            <% Object.entries(info).forEach(([key, value]) => {
              if (!['totalFilesIndexed', 'totalSizeBytes', 'averageFileSize', 'latestIndexedAt', 'earliestCreatedAt', 'latestModifiedAt', 'topFileFormats'].includes(key)) { %>
                <tr class="border-t">
                  <td class="px-4 py-2 font-medium"><%= key %></td>
                  <td class="px-4 py-2"><%= value %></td>
                </tr>
            <% } }) %>
          </tbody>
        </table>
      </section>
  
      <!-- File Statistics Table -->
      <section class="mb-10">
        <h2 class="text-xl font-semibold mb-4">File Statistics</h2>
        <table class="w-full bg-white rounded shadow">
          <thead class="bg-gray-200 text-left">
            <tr>
              <th class="px-4 py-2 w-1/2">Metric</th>
              <th class="px-4 py-2 w-1/2">Value</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Total Files Indexed</td>
              <td class="px-4 py-2"><%= info.totalFilesIndexed %></td>
            </tr>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Total Size</td>
              <td class="px-4 py-2"><%= formatBytes(info.totalSizeBytes) %></td>
            </tr>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Average File Size</td>
              <td class="px-4 py-2"><%= formatBytes(info.averageFileSize) %></td>
            </tr>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Latest Indexed At</td>
              <td class="px-4 py-2"><%= info.latestIndexedAt %></td>
            </tr>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Earliest Created At</td>
              <td class="px-4 py-2"><%= info.earliestCreatedAt %></td>
            </tr>
            <tr class="border-t">
              <td class="px-4 py-2 font-medium">Latest Modified At</td>
              <td class="px-4 py-2"><%= info.latestModifiedAt %></td>
            </tr>
          </tbody>
        </table>
      </section>

      <!-- Top File Formats Table -->
      <section>
        <h2 class="text-xl font-semibold mb-4">Top 10 File Formats</h2>
        <table class="w-full bg-white rounded shadow">
          <thead class="bg-gray-200 text-left">
            <tr>
              <th class="px-4 py-2 w-1/2">Format</th>
              <th class="px-4 py-2 w-1/2">Count</th>
            </tr>
          </thead>
          <tbody>
            <% info.topFileFormats.forEach(format => { %>
              <tr class="border-t">
                <td class="px-4 py-2 font-medium"><%= format.fileFormat %></td>
                <td class="px-4 py-2"><%= format.count %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>
    
    <div class="flex justify-center items-center h-12">
      <button onclick="window.close()"
              class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition cursor-pointer">
        Close
      </button>
    </div>

    <!-- Copilot Credit -->
    <footer class="m-4 text-center text-sm text-gray-700">
      <p>
        Crafted with quiet guidance by 
        <a href="https://copilot.microsoft.com" target="_blank" class="text-blue-600 font-semibold hover:underline">
          Microsoft Copilot
        </a> â€” <br />your companion in code.
      </p>
    </footer>

  </section>

</body>
</html>