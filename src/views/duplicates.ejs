<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Possible Duplicates</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="/assets/tailwind.js"></script>  
  <% 
  function removeDuplicates(input) {
    return [...new Set(
      input
        .split(',')
        .map(s => s.trim())
        .filter(Boolean)
    )].join(', ');
  }
  %>
</head>
<body class="bg-gray-100 text-gray-900 flex items-center justify-center">

  <section class="w-full max-w-5xl flex flex-col justify-between p-6 bg-white shadow-lg rounded-lg">

      <!-- ðŸŒ€ Header -->
      <header class="text-center mb-4">
        <h1 class="text-4xl font-bold">
          <span class="font-normal">dup</span><span class="font-extrabold text-gray-900">Finder</span>
        </h1>
      </header>

      <!-- ðŸ“Š Main -->
      <main class="max-w-4xl py-4 px-4">
        <h1 class="text-xl font-semibold mb-6 text-gray-900">Possible Duplicates (<%= duplicates.length %>)</h1>
    
        <% if (duplicates.length === 0) { %>
          <div class="text-gray-700 italic mb-6">No duplicates found. All entries are unique.</div>
        <% } else { %>
          <ul class="space-y-4">
            <% duplicates.forEach((entry, index) => { %>
              <li class="border border-gray-700 rounded-lg bg-white shadow-sm p-4">
                <div class="flex justify-between items-center">
                  <div>
                    <div class="text-xl text-black font-bold">Case # <%= index + 1 %></div>
                    <div class="font-mono text-md text-blue-700 break-all">
                      <% const tmpNames = removeDuplicates(entry.filenames) %>
                      <%= tmpNames.length > 160 ? tmpNames.slice(0, 160) + '...' : tmpNames %>                      
                    </div>
                    <div class="text-ms text-black mt-1">Count: <%= entry.count %></div>
                  </div>

                  <!-- <form method="GET" action="/duplicates/<%= entry.hash %>">
                    <button class="mx-4 px-3 py-1 text-md bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                      Inspect
                    </button>
                  </form> -->
                  <div class="flex flex-col space-y-2">
                    <!-- View Button -->
                    <a href="/view/<%= entry.hash %>" 
                      class="mx-4 px-3 py-1 text-md bg-cyan-600 text-white font-semibold rounded hover:bg-cyan-700 transition w-24" target="_blank">
                      View Text
                    </a>

                    <!-- Inspect Button -->
                    <form method="GET" action="/duplicates/<%= entry.hash %>">
                      <button class="mx-4 px-3 py-1 text-md bg-blue-500 text-white font-semibold rounded hover:bg-blue-600 transition w-24">
                        Inspect
                      </button>
                    </form>

                  </div>

                </div>
              </li>
            <% }) %>
          </ul>
        <% } %>
    
      </main>

      <div class="flex justify-center items-center h-12">
        <button onclick="window.close()"
                class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition cursor-pointer">
          Close
        </button>
      </div>

      <!-- Copilot Credit -->
      <footer class="m-4 text-center text-sm text-gray-700">
        <p>
          Crafted with quiet guidance by 
          <a href="https://copilot.microsoft.com" target="_blank" class="text-blue-600 font-semibold hover:underline">
            Microsoft Copilot
          </a> â€” <br />your companion in code.
        </p>
      </footer>

  </section>
  
</body>
</html>
