          </div> -->
          <!-- ðŸ“ File Format Dropdown + Intext Checkbox -->
          <div class="flex items-center justify-between space-x-4">
            <!-- ðŸ“ File Format Dropdown + Count -->
            <div class="flex items-center justify-start space-x-2">
              <select name="selectedFormat"
                      class="px-4 py-2 border border-black rounded focus:outline-none focus:ring focus:border-blue-400 bg-white text-gray-700">
                <% fileFormats.forEach(format => { %>
                  <option value="<%= format.fileFormat %>" <%= format.fileFormat === selectedFormat ? 'selected' : '' %>>
                    <%= format.fileFormat %><%= format.count > 0 ? `  (${format.count})` : '' %>
                  </option>
                <% }) %>
              </select>
              <p class="text-md text-black font-bold">(<%= fileFormats.length %>)</p>
            </div>
            <!-- Checkbox -->
            <!-- <label class="flex items-center space-x-2 text-black text-md">
              <input type="checkbox" name="textContent" class="form-checkbox h-4 w-4 text-blue-600">
              <span>Text Content</span>
            </label> -->
            <!-- Checkbox -->
            <label class="flex items-center space-x-2 text-black text-md">
              <input type="checkbox" name="textContent"
                    class="form-checkbox h-4 w-4 text-blue-600"
                    <%= textContent ? 'checked' : '' %>
              >
              <span class="font-normal">Text Content</span>
            </label>

            <!-- Info Icon -->
            <a href="https://sqlite.org/fts5.html" target="_blank"
                class="text-blue-600 hover:text-blue-800 transition"
                title="SQLite FTS5 Extension">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M12 20a8 8 0 100-16 8 8 0 000 16z" />
              </svg>
            </a>

          </div>
          
          <!-- <button type="submit"
                  class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition">
            Search
          </button> -->
          <div class="flex items-center space-x-4">
            <!-- ðŸ”˜ Search Button (full width) -->
            <button type="submit"
                    class="flex-1 bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition">
              Search
            </button>
          
            <!-- ðŸ§¹ Reset Button (smaller width) -->
            <button type="reset"                    
                    class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">
              Reset
            </button>
          </div>

        </form>
      </div>
    </main>

    <!-- ðŸ“ Output -->
    <section class="w-full max-w-6xl mt-2 p-6 bg-white shadow rounded">
      <% if (results && results.length > 0) { %>
        <div class="">
          <h2 class="text-lg font-medium mb-4 text-center">Results (<%= results.length %>)</h2>
          <!-- <ol class="space-y-4 list-decimal list-inside">
            <% results.forEach(file => { %>
              <li class="border p-4 rounded bg-gray-100 text-sm text-gray-800">
                <div><strong>Filename:</strong> <%= file.fileName %></div>
                <div>
                  <strong>Full Path:</strong>
                  <span class="cursor-pointer text-blue-600 hover:underline" onclick="copyToClipboard('<%= file.fullPath.replace(/\\/g, '\\\\') %>')">

                    <%= file.fullPath %>
                  </span>
                </div>
                <div><strong>Size:</strong> <%= formatBytes(file.fileSize) %> bytes</div>
                <div><strong>Created At:</strong> <%= new Date(file.createdAt).toLocaleString() %></div>
              </li>
            <% }) %>
          </ol> -->

          <ol class="space-y-4 list-decimal list-inside">
            <% results.forEach(file => { %>
              <li class="border p-4 rounded bg-gray-100 text-md text-gray-800">
                <div class="flex justify-between items-center">

                  <!-- ðŸ“„ File Info -->
                  <div class="space-y-1">
                    <% if ('score' in file) { %>
                      <div>
                        <strong>Score:</strong> <%= file.score %>
                      </div>
                    <% } %>

                    <div>
                      <strong>Filename:</strong> <%= file.fileName %>
                    </div>
                    <div>
                      <strong>Full Path:</strong>
                      <span class="cursor-pointer text-blue-600 hover:underline"
                            onclick="copyToClipboard('<%= file.fullPath.replace(/\\/g, '\\\\') %>')">
                        <%= file.fullPath %>
                      </span>
                    </div>
                    <div>
                      <strong>Size:</strong> <%= formatBytes(file.fileSize) %> bytes
                    </div>
                    <div>
                      <strong>Created At:</strong> <%= new Date(file.createdAt).toLocaleString() %>
                    </div>
                  </div>
          
                  <!-- ðŸ‘ï¸ View Button -->                  
                    <a href="/view/<%= file.id %>/#:~:text=<%= stext %>" target="_blank" 
                        class="ml-4 w-28 h-8 flex items-center justify-center bg-cyan-600 text-white text-sm font-semibold rounded hover:bg-cyan-700 transition text-center whitespace-nowrap shrink-0">
                      View Text
                    </a>                    

                </div>
              </li>
            <% }) %>
          </ol>

        </div>
      <% } else if (results.length === 0) { %>
        <p class="mt-4 text-md text-red-500 text-center font-bold">No matching files found.</p>
      <% } else { %>  
        <p class="mt-4 text-md text-red-500 text-center font-bold">
          <%= results.error %>
          <br />
          <%= results.message %></p>
      <% } %>
    </section>

    <div class="flex justify-center items-center h-12">
      <button onclick="window.close()"
              class="inline-block mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition cursor-pointer">
        Close
      </button>
    </div>

