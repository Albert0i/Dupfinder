  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <script src="/assets/tailwind.js"></script>  
  <script type="text/javascript">
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(() => {
        console.log(`'${text}' copied to clipboard!`);
      }).catch(err => {
        console.error(`'${text}' clipboard copy failed:`, err);
        alert(`'${text}' clipboard copy failed:`, err);
      });
    }
    </script>
    <% function formatBytes(bytes) {
      if (bytes === 0 || bytes == null) return '0 B';
      const units = ['B', 'KB', 'MB', 'GB', 'TB'];
      const i = Math.floor(Math.log(bytes) / Math.log(1024));
      const value = bytes / Math.pow(1024, i);
      return `${value.toFixed(2)} ${units[i]}`;
    } 
    
    function formatTime(seconds) {
      const hrs = Math.floor(seconds / 3600);
      const mins = Math.floor((seconds % 3600) / 60);
      const secs = (seconds % 60).toFixed(2);
    
      return `${hrs}h : ${mins}m : ${secs}s`;
    }  
    %>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen flex items-start justify-center px-4 py-8">
  <section class="w-full max-w-4xl flex flex-col items-center p-6 bg-white shadow-lg rounded-lg">

    <!-- ðŸŒ€ Header -->
    <header class="text-center mb-4">
      <h1 class="text-4xl font-bold cursor-pointer inline-block"
          onclick="location.reload()"
          title="Click to refresh">
        ðŸŒ€ <span class="font-normal">dup</span><span class="font-extrabold text-gray-900">Finder</span>
      </h1>
    </header>

    <!-- ðŸ“Š Main -->
    <main class="w-full">
      <h1 class="text-xl font-semibold mb-4 text-black text-center">Search</h1>

      <div class="w-2/3 mx-auto">
        <form action="/search" method="POST" class="space-y-4">
          <!-- ðŸ” Search Input -->
          <input type="text" name="stext" placeholder="Enter text to search or * for all..." value="<%= stext%>"
